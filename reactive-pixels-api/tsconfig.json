{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "outDir": "build",
    "sourceMap": true,
    "target": "es5",
    "moduleResolution": "node",
    "rootDir": "src",
    "lib": ["es5", "es6", "dom", "esnext", "es2017.object"],
    "typeRoots": ["./typings"],
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "skipLibCheck": true
  },
  "compileOnSave": true,
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
